{
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.js"],
  "coverageThreshold": {
    "global": {
      "lines": 90,
      "statements": 90
    }
  },
  "coverageDirectory": "<rootDir>/coverage",
  "moduleFileExtensions": ["mjs", "js"],
  "setupFiles": ["<rootDir>/test/jest.setup.js"],
  "testEnvironment": "jsdom",
  "testRegex": [".*test\\.js$"],
  "transform": {},
  "verbose": true
}
