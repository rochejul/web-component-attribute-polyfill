{
  "eslint.workingDirectories": [{ "mode": "location" }],
  "eslint.useFlatConfig": true,
  "jest.jestCommandLine": "NODE_OPTIONS=\"$NODE_OPTIONS --enable-source-maps --experimental-vm-modules\" npx jest --no-cache",
  "jest.runMode": "on-save",
  "jest.coverageFormatter": "DefaultFormatter",
  "jest.coverageColors": {
    "covered": "rgba(9, 156, 65, 0.4)",
    "uncovered": "rgba(255,99,71, 0.2)",
    "partially-covered": "rgba(255,215,0, 0.2)"
  },
  "jest.virtualFolders": [{ "name": "core", "rootPath": "packages/core" }],
  "jestrunner.jestCommand": "NODE_OPTIONS=\"--experimental-vm-modules\" npx jest",
  "jestrunner.runOptions": ["--no-cache", "--coverage=false"],
  "jestrunner.debugOptions": {
    "env": { "NODE_OPTIONS": "--experimental-vm-modules" },
    "args": [
      "--runInBand",
      "--no-cache",
      "--coverage=false",
      "--colors",
      "--verbose",
      "--watchAll=false"
    ]
  }
}
